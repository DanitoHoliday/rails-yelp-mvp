
<div class="container">
<h1> <%=@restaurant.name%></h1>
<div>
<h2> <%=@restaurant.address%></h2>
<h2> <%=@restaurant.phone%></h2>
<h2> <%=@restaurant.category%></h2>
</div>
<div class="review">
<% @restaurant.reviews.each do |review| %>
  <%= review.content %>
  <%= "⭐"*review.rating %>
  <br>
<%end%>
</div>

<div>
<%= link_to "Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
</div>

<div>
<h3><%= link_to "Go back", restaurants_path %></h3>
</div>
</div>
